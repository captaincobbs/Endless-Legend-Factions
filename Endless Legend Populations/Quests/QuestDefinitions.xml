  <QuestDefinition Name="PopulationQuestKapaku_Part1" Category="PopulationQuest" SubCategory="Population" MinimumTurn="36" TriggeringProbability="1">

    <!--============ TAGS ============-->
    <Tags>BeginTurn,EventStarSystemNodeRevealed</Tags>

    <QuestContextSolo/>

    <RepetitionRules  NumberOfOccurrencesPerGame="0"
                      NumberOfOccurrencesPerEmpire="1"
                      NumberOfConcurrentInstances="0"/>

    <!--============ VARIABLES ============-->
    <Vars>
      <!--Empire fulfilling this quest-->
      <Var VarName="$CurrentEmpire">
        <From Source="$Empire"/>
      </Var>

      <Var VarName="$AllStarSystems">
        <From Source="$Constellations.$StarSystems"/>
      </Var>
      
      <Var VarName="$ChabotaSystem">
        <Any>
          <From Source="$AllStarSystems">
            <Where>
              <PathPrerequisite Flags="Prerequisite">ClassStarSystem/ClassPlanet,UniquePlanetChabota</PathPrerequisite>
            </Where>
          </From>
        </Any>
      </Var>

      <Var VarName ="$ChabotaPlanet">
        <Any>
          <From Source ="$ChabotaSystem.$Planets">
            <Where>
              <PathPrerequisite Flags="Prerequisite">ClassPlanet,UniquePlanetAcademy</PathPrerequisite>
            </Where>
          </From>
        </Any>
      </Var>

      <Var VarName="$Marker01"/>
      <Var VarName="$Marker02"/>

     <LocalizationVar LocalizationKey="$AurigaPlanetName"   Source="$AurigaPlanet"/>
      <!--C3: expression to check if the player owns Chabota-->
      <Var VarName="$Expression01" StringValue="ClassEmpire/ClassColonizedStarSystem/UniquePlanetChabota,ClassColonizedPlanet"/>
    </Vars>

    <!--============ PREREQUISITES ============-->
    <Prerequisites Target="$(Empire)">
      <InterpreterPrerequisite Flags="Prerequisite">Property(Context,@'ClassEmpire/ClassPopulationEmpire,ClassPopulationEmpireAffinityKapaku',PopulationCount,true) ge 10 </InterpreterPrerequisite>
    </Prerequisites>

    <!--============ STEPS ============-->
    <!-- Todo -->
  </QuestDefinition>

