<?xml version="1.0" encoding="utf-8"?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <!--
 Political definitions:
		Politics01 - Industrialist
		Politics02 - Scientist
		Politics03 - Pacifist
		Politics04 - Ecologist
		Politics05 - Religious
		Politics06 - Militarist
	 -->  
  <!-- Kapaku -->
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku1" Type="PopulationCollectionBonus"><!-- Politics type to be boosted, TooltipOverride is what displays the up arrow and the colored party name -->
  <Modifier TargetProperty="Politics04ToPolitics04" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityKapaku" TooltipOverride="%TooltipOverridePositivePolitics04"/> <!-- Collection Bonus 1 MUST be a political power boost -->
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku2" Type="PopulationCollectionBonus"> <!-- +15% Production on Systems with Kapaku-->
    <Modifier TargetProperty="SystemProductionBonusFromCollection" Operation="Addition" Value="0.15" Path="../ClassEmpire/ClassStarSystem" SearchValueFromPath="true"/>
  </SimulationDescriptor>                                                                                                                                       <!-- Look under the public version of this in the game files for examples -->
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="SystemGrowth" Operation="Addition" Left="0.25" BinaryOperation="Multiplication" Right="$(SystemProduction)" Path="../ClassEmpire/ClassColonizedStarSystem" SearchValueFromPath="true" TooltipHidden="true"/> <!-- If you want to make collection bonus 3 a law, you don't put anything here -->
  </SimulationDescriptor>

  <!-- Broken Lords -->
  <SimulationDescriptor Name="PopulationCollectionBonusLords1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics06ToPolitics06" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityLords" TooltipOverride="%TooltipOverridePositivePolitics06"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusLords2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamagesBonusFromCollection" Operation="Addition" Value="150" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityLords" SearchValueFromPath="true"/>
    <Modifier TargetProperty="MaximumSystemManpowerBonusFromCollection" Operation="Addition" Value="0.15" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityLords" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusLords3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="TroopDamageBonuses" Operation="Addition" Left="0.01" BinaryOperation="Multiplication" Right="$(HeroCount)" Path="../ClassEmpire" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- Forgotten-->
  <SimulationDescriptor Name="PopulationCollectionBonusForgotten1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics03ToPolitics03" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityForgotten" TooltipOverride="%TooltipOverridePositivePolitics03"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusForgotten2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="ShipMaximumMovement" Operation="Addition" Value="1" Path="../ClassEmpire/ClassGarrisonFleet" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusForgotten3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="SystemMoney" Operation="Addition" Left="0.05" BinaryOperation="Multiplication" Right="$(SystemResearch)" Path="../ClassEmpire/ClassColonizedStarSystem" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- Drakken -->
  <SimulationDescriptor Name="PopulationCollectionBonusDrakken1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics03ToPolitics03" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityDrakken" TooltipOverride="%TooltipOverridePositivePolitics03"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusDrakken2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemEmpirePointBonusFromCollection" Operation="Percent" Value="0.15" Path="ClassEmpire/ClassColonizedStarSystem" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusDrakken3" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="LawUpkeepMultiplier" Operation="Percent" Value="-0.5" Path="../ClassEmpire" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- Morgawr -->
  <SimulationDescriptor Name="PopulationCollectionBonusMorgawr1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics02ToPolitics02" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityMorgawr" TooltipOverride="%TooltipOverridePositivePolitics02"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusMorgawr2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemEmpirePointsBonusFromCollection" Operation="Addition" Value="0.15" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityMorgawr" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusMorgawr3" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="ShipProductionCostReduction" Operation="Subtraction" Left="0.15" Path="../ClassEmpire/ClassColonizedStarSystem" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- Wild Walkers -->
  <SimulationDescriptor Name="PopulationCollectionBonusWalkers1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics01ToPolitics01" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityWalkers" TooltipOverride="%TooltipOverridePositivePolitics01"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusWalkers2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="VisionRangeBonusFromCollection" Operation="Addition" Value="15" Path="../ClassEmpire/ClassStarSystem" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusWalkers3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="SystemProduction" Operation="Addition" Left="0.25" BinaryOperation="Multiplication" Right="$(SystemGrowth)" Path="../ClassEmpire/ClassColonizedStarSystem" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- Roving Clans -->
  <SimulationDescriptor Name="PopulationCollectionBonusRoving1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics03ToPolitics03"    Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityRoving" TooltipOverride="%TooltipOverridePositivePolitics03"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusRoving2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="TradingRouteIncomeModifier" Operation="Percent" Value="0.15" Path="ClassEmpire/ClassColonizedStarSystem"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusRoving3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="DustInflationModifier" Operation="Percent" Left="-0.05" BinaryOperation="Multiplication" Right="$(NumberOfTradingCompanyHeadquarters)"  Path="ClassEmpire" />
  </SimulationDescriptor>

  <!-- Mykara -->
  <SimulationDescriptor Name="PopulationCollectionBonusMykara1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics01ToPolitics01"    Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityMykara" TooltipOverride="%TooltipOverridePositivePolitics01"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusMykara2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemGrowthBonusFromCollection" Operation="Addition" Value="0.15" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityMykara" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusMykara3" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemFIDSIPercentBonusFromCollection" Operation="Addition" Value="0.03" Path="false/./ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityMykara" SearchValueFromPath="true" />
    <Modifier TargetProperty="SystemFIDSIPercentBonusFromCollection" Operation="Addition" Value="0.03" Path="PopulationCollectionBonusMykara2,ClassPopulationEmpireAffinityMykaraCount/./ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityMykara" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
  
  <!-- Cultists -->
  <SimulationDescriptor Name="PopulationCollectionBonusCultists1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics05ToPolitics05"    Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityCultists" TooltipOverride="%TooltipOverridePositivePolitics05"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusCultists2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemEmpirePointBonusFromCollection" Operation="Addition" Value="0.15" Path="false/./ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityCultists" SearchValueFromPath="true" />
    <Modifier TargetProperty="SystemEmpirePointBonusFromCollection" Operation="Addition" Value="0.15" Path="PopulationCollectionBonusTerrans2,ClassPopulationEmpireAffinityCultistsCount/./ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityCultists" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusCultists3" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="HappinessBonusFromCollection" Operation="Addition"  Value="25"   Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityCultists"/>
  </SimulationDescriptor>

  <!-- Allayi -->
  <SimulationDescriptor Name="PopulationCollectionBonusAllayi1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics04ToPolitics04"    Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityAllayi" TooltipOverride="%TooltipOverridePositivePolitics04"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusAllayi2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemEmpirePointBonusFromCollection" Operation="Addition" Value="0.15" Path="false/./ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityAllayi" SearchValueFromPath="true" />
    <Modifier TargetProperty="SystemEmpirePointsBonusFromCollection" Operation="Addition" Value="0.15" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityAllayi" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusAllayi3" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="ShipMaximumMovement" Operation="Addition" Value="3" Path="../ClassEmpire/ClassGarrisonFleet" SearchValueFromPath="true" TooltipHidden="true"/>
  </SimulationDescriptor>
</Datatable>