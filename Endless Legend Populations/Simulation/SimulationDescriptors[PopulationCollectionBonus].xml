<?xml version="1.0" encoding="utf-8"?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <!--
 Political definitions:
		Politics01 - Industrialist
		Politics02 - Scientist
		Politics03 - Pacifist
		Politics04 - Ecologist
		Politics05 - Religious
		Politics06 - Militarist
	 -->
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics01ToPolitics01" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityKapaku" TooltipOverride="%TooltipOverridePositivePolitics01"/>
    <!--<Modifier TargetProperty="Politics04ToPolitics04" Operation="Addition" Value="3" Path="../ClassEmpire/ClassPopulationEmpireAffinityKapaku" TooltipOverride="%TooltipOverridePositivePolitics04"/>-->
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="SystemProductionBonusFromCollection" Operation="Addition" Value="0.10" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityKapaku" SearchValueFromPath="true"/> <!-- Population Collection bonus 2, mostly increases one of the FIDSI by 15% if population is in system)-->
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku3" Type="PopulationCollectionBonus">
	  <BinaryModifier TargetProperty="NetSystemProduction" Operation="Addition" Left="0.1" BinaryOperation="Multiplication" Right="$(SystemGrowth)" Path="../ClassEmpire/ClassColonizedStarSystem/ClassColonizedPlanet" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  
</Datatable>