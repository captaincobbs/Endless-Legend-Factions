<?xml version="1.0" encoding="utf-8"?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">
  <!--
 Political definitions:
		Politics01 - Industrialist
		Politics02 - Scientist
		Politics03 - Pacifist
		Politics04 - Ecologist
		Politics05 - Religious
		Politics06 - Militarist
	 -->  
  <!-- Kapaku -->
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics01ToPolitics01" Operation="Addition" Value="0.5" Path="../ClassEmpire/ClassPopulationEmpireAffinityKapaku" TooltipOverride="%TooltipOverridePositivePolitics01"/> <!-- Politics type to be boosted, TooltipOverride is what displays the up arrow and the colored party name -->
    <Modifier TargetProperty="Politics04ToPolitics04" Operation="Addition" Value="0.5" Path="../ClassEmpire/ClassPopulationEmpireAffinityKapaku" TooltipOverride="%TooltipOverridePositivePolitics04"/> <!-- Collection Bonus 1 MUST be a political power boost -->
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku2" Type="PopulationCollectionBonus"> <!-- Increases max pop on lava planets by 2 -->
    <Modifier TargetProperty="RawMaximumPopulation" Operation="Addition" Value="2" Path="./ClassColonizedStarSystem/PlanetTypeLava" SearchValueFromPath="true"/> <!-- Bonus 2 & 3 can be whatever you want -->
  </SimulationDescriptor>                                                                                                                                        <!-- Look under the public version of this in the game files for examples -->
  <SimulationDescriptor Name="PopulationCollectionBonusKapaku3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="NetSystemProduction" Operation="Addition" Left="0.25" BinaryOperation="Multiplication" Right="$(SystemGrowth)" Path="../ClassEmpire/ClassColonizedStarSystem/ClassColonizedPlanet" SearchValueFromPath="true"/>
    <BinaryModifier TargetProperty="TerraformationModifier" Operation="Percent" Value="-0.2" Path="ClassEmpire"/>                                               <!-- If you want to make collection bonus 3 a law, you don't put anything here -->
  </SimulationDescriptor>

  <!-- Broken Lords -->
  <SimulationDescriptor Name="PopulationCollectionBonusLords1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics06ToPolitics06" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityLords" TooltipOverride="%TooltipOverridePositivePolitics06"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusLords2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="GroundBattleBombardmentAttackerDamagesBonusFromCollection" Operation="Addition" Value="150" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityLords" SearchValueFromPath="true"/>
    <Modifier TargetProperty="MaximumSystemManpowerBonusFromCollection" Operation="Addition" Value="0.15" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityLords" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusLords3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="TroopDamageBonuses" Operation="Addition" Left="0.01" BinaryOperation="Multiplication" Right="$(HeroCount)" Path="./ClassEmpire" TooltipHidden="true"/>
  </SimulationDescriptor>

  <!-- Forgotten-->
  <SimulationDescriptor Name="PopulationCollectionBonusForgotten1" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="Politics06ToPolitics03" Operation="Addition" Value="1" Path="../ClassEmpire/ClassPopulationEmpireAffinityForgotten" TooltipOverride="%TooltipOverridePositivePolitics03"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusForgotten2" Type="PopulationCollectionBonus">
    <Modifier TargetProperty="MaximumMovement" Operation="Addition" Value="3" Path="../ClassEmpire/ClassStarSystem/ClassPopulationStarSystemAffinityForgotten" SearchValueFromPath="true"/>
  </SimulationDescriptor>
  <SimulationDescriptor Name="PopulationCollectionBonusForgotten3" Type="PopulationCollectionBonus">
    <BinaryModifier TargetProperty="NetEmpireResearch" Operation="Addition" Left="0.05" BinaryOperation="Multiplication" Right="$(EmpireMoney)" Path="./ClassEmpire" TooltipHidden="true"/>
  </SimulationDescriptor>
</Datatable>