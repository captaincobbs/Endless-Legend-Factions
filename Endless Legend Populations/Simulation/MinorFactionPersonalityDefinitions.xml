  <!-- Weight decides the chance that a faction will be chosen, the max isn't 10, but I suggest using lowest numbers possible for simplicity -->
  <!-- Kapaku -->
  <MinorFactionPersonalityDefinition Name="FactionPersonalityKapaku">
    <MajorTrait Name="PersonalityTraitPragmatist"/> <!-- Determines what additional bonus they give. Pragmatist is science, Warmonger is manpower/ships, and Pacifist gives influence -->
