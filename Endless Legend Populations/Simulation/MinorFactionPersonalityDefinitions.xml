      <Trait Name="FactionTraitKapakuHappiness"/>
    </MinorTrait>
    <MinorTrait Weight="3">
      <Trait Name="FactionTraitKapakuTerraforming"/>
    </MinorTrait>
  </MinorFactionPersonalityDefinition>

