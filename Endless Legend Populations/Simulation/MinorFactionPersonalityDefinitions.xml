<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/MinorFactionPersonalityDefinition.xsd">
  <!-- Weight decides the chance that a faction will be chosen, the max isn't 10, but I suggest using lowest numbers possible for simplicity -->
  <!-- Kapaku -->
  <MinorFactionPersonalityDefinition Name="FactionPersonalityKapaku">
    <MajorTrait Name="PersonalityTraitPragmatist"/> <!-- Determines what additional bonus they give. Pragmatist is science, Warmonger is manpower/ships, and Pacifist gives influence -->
    <MinorTrait Weight="7">
      <Trait Name="FactionTraitKapakuHappiness"/>
    </MinorTrait>
    <MinorTrait Weight="3">
      <Trait Name="FactionTraitKapakuTerraforming"/>
    </MinorTrait>
  </MinorFactionPersonalityDefinition>

  <!-- Broken Lords -->
  <MinorFactionPersonalityDefinition Name="FactionPersonalityLords">
    <MajorTrait Name="PersonalityTraitWarmonger"/>
    <MinorTrait Weight="7">
      <Trait Name="FactionTraitLordsDust"/>
    </MinorTrait>
    <MinorTrait Weight="3">
      <Trait Name="FactionTraitLordsShipRegen"/>
    </MinorTrait>
  </MinorFactionPersonalityDefinition>

  <!-- Forgotten -->
  <MinorFactionPersonalityDefinition Name="FactionPersonalityForgotten">
    <MajorTrait Name="PersonalityTraitPacifist"/>
    <MinorTrait Weight="3">
      <Trait Name="FactionTraitForgottenMoveSpeed"/>
    </MinorTrait>
    <MinorTrait Weight="7">
      <Trait Name="FactionTraitForgottenAccuracy"/>
    </MinorTrait>
  </MinorFactionPersonalityDefinition>
</Datatable>